{
  // VS Code workspace settings for PromptPacker development
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  
  // TypeScript settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.format.enable": false, // Use Prettier instead
  
  // ESLint and Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  
  // Extension development
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "...": true,
    "**/node_modules": true,
    "**/dist": true
  },
  
  // Search and file watching
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/*.map": true
  },
  
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.git/**": true
  },
  
  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",
  
  // Extension specific
// In .vscode/settings.json or a .promptpackerrc file

  "promptpacker.includePatterns": [
    "**/.prettierignore",
    "**/.gitignore",
    "**/*.rc"
  ],
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "hide-files.files": []
  
}