{
  // VS Code tasks configuration for pnpm-based development
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build - dev",
      "command": "pnpm",
      "args": ["run", "build:dev"],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell", 
      "label": "build",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$tsc"
    },
    {
      "type": "shell",
      "label": "watch",
      "command": "pnpm",
      "args": ["run", "watch"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation in watch mode",
          "endsPattern": "Found \\d+ errors?\\. Watching for file changes\\."
        }
      }
    },
    {
      "type": "shell",
      "label": "test",
      "command": "pnpm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "lint",
      "command": "pnpm",
      "args": ["run", "lint"],
      "group": "test",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "type": "shell",
      "label": "format",
      "command": "pnpm", 
      "args": ["run", "format"],
      "group": "test"
    },
    {
      "type": "shell",
      "label": "vsce: package",
      "command": "pnpm",
      "args": ["run", "vscode:package"],
      "group": "build",
      "dependsOn": "build"
    }
  ]
}