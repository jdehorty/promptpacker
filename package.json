{
  "name": "promptpacker",
  "displayName": "PromptPacker",
  "version": "1.0.10",
  "type": "module",
  "description": "Pack It. Prompt It. Ship It. üöÄ\n\nPromptPacker is the ultimate VS Code extension for AI developers and prompt engineers. Instantly combine and organize your code files into perfectly formatted prompts for modern LLMs. Transform scattered code into context-rich prompts with one click.\n\nFeatures:\n‚Ä¢ Pack Code to Clipboard: Instantly combine multiple files for AI prompts\n‚Ä¢ Smart Context Preservation: Maintains file structure and relationships\n‚Ä¢ Multi-file Selection: Right-click multiple files for batch processing\n‚Ä¢ AI-Optimized Output: Perfect formatting for LLM consumption",
  "main": "dist/extension.js",
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package",
    "watch": "vite build --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist && rm -rf node_modules",
    "dev": "pnpm run build:dev && pnpm run watch"
  },

  "publisher": "ai-edge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jdehorty/promptpacker.git"
  },
  "homepage": "https://github.com/jdehorty/promptpacker",
  "bugs": {
    "url": "https://github.com/jdehorty/promptpacker/issues"
  },
  "keywords": [
    "ai",
    "llm",
    "prompt",
    "ai-models",
    "llm",
    "prompt-engineering",
    "context",
    "code-combine",
    "ai-tools",
    "machine-learning",
    "openai",
    "anthropic",
    "prompt-crafting",
    "code-packing"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Machine Learning",
    "Other",
    "Snippets",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:promptpacker.packCode",
    "onCommand:promptpacker.packCodeWithContext",
    "onCommand:promptpacker.configure",
    "onCommand:promptpacker.preview",
    "onCommand:promptpacker.diagnose",
    "onCommand:promptpacker.showLogs"
  ],
  "contributes": {
    "commands": [
      {
        "command": "promptpacker.packCode",
        "title": "üì¶ Pack Code for AI Analysis",
        "category": "PromptPacker"
      },
      {
        "command": "promptpacker.packCodeWithContext",
        "title": "üéØ Pack Code with File Context",
        "category": "PromptPacker"
      },
      {
        "command": "promptpacker.configure",
        "title": "‚öôÔ∏è Configure PromptPacker",
        "category": "PromptPacker"
      },
      {
        "command": "promptpacker.preview",
        "title": "üëÅÔ∏è Preview Packed Output",
        "category": "PromptPacker"
      },
      {
        "command": "promptpacker.diagnose",
        "title": "üîß Run Diagnostics",
        "category": "PromptPacker"
      },
      {
        "command": "promptpacker.showLogs",
        "title": "üìã Show Debug Logs",
        "category": "PromptPacker"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "promptpacker.packCode",
          "group": "promptpacker@1"
        },
        {
          "command": "promptpacker.preview",
          "group": "promptpacker@2"
        },
        {
          "command": "promptpacker.packCodeWithContext",
          "group": "promptpacker@3"
        }
      ],
      "explorer/context:multi": [
        {
          "command": "promptpacker.packCode",
          "group": "promptpacker@1"
        },
        {
          "command": "promptpacker.preview",
          "group": "promptpacker@2"
        },
        {
          "command": "promptpacker.packCodeWithContext",
          "group": "promptpacker@3"
        }
      ]
    },
    "configuration": {
      "title": "PromptPacker",
      "properties": {
        "promptpacker.ignore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.test.{js,ts,jsx,tsx}",
            "**/*.spec.{js,ts,jsx,tsx}",
            "**/coverage/**",
            "**/.env*"
          ],
          "description": "Glob patterns for files to ignore"
        },
        "promptpacker.include": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "src/**/*.{js,ts,jsx,tsx}",
            "**/*.md",
            "package.json",
            "*.config.{js,ts,json}"
          ],
          "description": "Glob patterns for files to include"
        },
        "promptpacker.maxFileSize": {
          "type": "string",
          "default": "100kb",
          "description": "Maximum file size to include (e.g., '100kb', '1mb')"
        },
        "promptpacker.maxTotalSize": {
          "type": "string",
          "default": "1mb",
          "description": "Maximum total size of all files (e.g., '1mb', '5mb')"
        },
        "promptpacker.preserveStructure": {
          "type": "boolean",
          "default": true,
          "description": "Whether to preserve file paths and directory structure in output"
        },
        "promptpacker.outputFormat": {
          "type": "string",
          "enum": [
            "ai-optimized",
            "standard",
            "markdown"
          ],
          "default": "ai-optimized",
          "description": "Output format for packed code"
        }
      }
    }
  },
  "dependencies": {
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.10.2",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "8.34.0",
    "@typescript-eslint/parser": "8.34.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.1",
    "prettier": "3.5.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "8.34.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "vsce": "^2.6.3"
  },
  "icon": "images/logo.png",
  "trustedDependencies": [
    "vsce"
  ],
  "packageManager": "pnpm@9.15.0"
}
